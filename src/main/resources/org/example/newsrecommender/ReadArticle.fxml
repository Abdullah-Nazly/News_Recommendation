<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: grey;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.newsrecommender.articles.ReadArticle">
   <children>
      <Button fx:id="backButton" layoutX="605.0" layoutY="363.0" mnemonicParsing="false" onAction="#handleBackButton" text="Back" />
