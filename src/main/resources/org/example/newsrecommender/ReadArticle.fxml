      <Button fx:id="LikeButton" layoutX="540.0" layoutY="283.0" mnemonicParsing="false" onAction="#handleLikeButton" prefHeight="25.0" prefWidth="51.0" text="Like" />
      <TextArea fx:id="articleTextArea" layoutX="197.0" layoutY="7.0" prefHeight="267.0" prefWidth="456.0" />
      <ScrollPane fx:id="headlinesScrollPane" layoutX="14.0" layoutY="6.0" prefHeight="267.0" prefWidth="169.0">
         <content>
            <VBox fx:id="headlinesVBox" prefHeight="265.0" prefWidth="167.0" />
         </content>
      </ScrollPane>
      <Button fx:id="DislikeButton" layoutX="596.0" layoutY="283.0" mnemonicParsing="false" onAction="#handleDislikeButton" text="Dislike" />
      <Button fx:id="SaveButton" layoutX="197.0" layoutY="283.0" mnemonicParsing="false" onAction="#handleSaveButton" text="Save" />
   </children>
</AnchorPane>
